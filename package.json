{
  "name": "focustrack",
  "version": "0.3.0",
  "description": "Automatic time tracking and productivity management app",
  "main": "src/main/index.js",
  "homepage": "https://github.com/leebohyeon1/FocusTrack",
  "repository": {
    "type": "git",
    "url": "https://github.com/leebohyeon1/FocusTrack.git"
  },
  "author": "Lee Bohyeon",
  "scripts": {
    "start": "electron .",
    "start:simple": "cross-env NODE_ENV=development electron src/main/main-electron-simple.js",
    "start:simple:win": "set NODE_ENV=development && electron src/main/main-electron-simple.js",
    "dev": "concurrently \"npm run react-dev\" \"npm run electron-dev\"",
    "react-dev": "cross-env BROWSER=none react-scripts start",
    "electron-dev": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "electron-simple": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron src/main/main-electron-simple.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='(test/unit|src/.*\\.test\\.js)'",
    "test:integration": "jest --testPathPattern='(test/integration|__tests__/integration)'",
    "test:integration:ipc": "jest --testPathPattern='integration/ipc-communication'",
    "test:integration:storage": "jest --testPathPattern='integration/storage-system'",
    "test:integration:workflows": "jest --testPathPattern='integration/user-workflows'",
    "test:integration:errors": "jest --testPathPattern='integration/error-handling'",
    "test:integration:backup": "jest --testPathPattern='integration/backup-recovery'",
    "test:e2e": "jest --testPathPattern='(test/e2e|__tests__/e2e)'",
    "test:e2e:playwright": "playwright test",
    "test:e2e:visual": "playwright test visual-regression",
    "test:e2e:a11y": "playwright test accessibility",
    "test:e2e:focus": "playwright test focus-session",
    "test:e2e:tasks": "playwright test task-management",
    "test:e2e:settings": "playwright test settings-data",
    "test:e2e:app": "playwright test app-lifecycle",
    "test:renderer": "jest --testPathPattern='test/unit/renderer'",
    "test:main": "jest --testPathPattern='test/unit/main'",
    "test:full": "./scripts/run-tests.sh",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "prepare": "husky",
    "migrate:scan": "node src/main/cli/migrate-data.js scan",
    "migrate:encrypt": "node src/main/cli/migrate-data.js migrate encrypt",
    "migrate:decrypt": "node src/main/cli/migrate-data.js migrate decrypt",
    "migrate:dry-run": "node src/main/cli/migrate-data.js migrate encrypt -d",
    "migrate:rollback": "node src/main/cli/migrate-data.js rollback",
    "migrate:validate": "node src/main/cli/migrate-data.js validate",
    "migrate:report": "node src/main/cli/migrate-data.js report"
  },
  "keywords": [
    "time-tracking",
    "productivity",
    "electron",
    "react"
  ],
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@mui/material": "^5.14.20",
    "@reduxjs/toolkit": "^1.9.7",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "classnames": "^2.3.2",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "electron-store": "^8.1.0",
    "googleapis": "^128.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^7.6.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "redux": "^4.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@playwright/test": "^1.52.0",
    "@playwright/test-runner": "^0.9.24",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^29.7.0",
    "chai": "^5.2.0",
    "chalk": "^4.1.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-electron": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "inquirer": "^8.2.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^14.0.1",
    "pixelmatch": "^7.1.0",
    "playwright-core": "^1.52.0",
    "playwright-electron": "^0.5.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.5.3",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^18.3.1",
    "sinon": "^20.0.0",
    "spectron": "^19.0.0",
    "wait-on": "^8.0.3"
  }
}
